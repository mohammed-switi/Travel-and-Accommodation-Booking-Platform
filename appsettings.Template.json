{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TravelDb;User Id=sa;Password=YOUR_DB_PASSWORD;TrustServerCertificate=True;",
    "SerilogConnection": "Server=localhost;Database=LoggingDb;User Id=sa;Password=YOUR_DB_PASSWORD;TrustServerCertificate=True;",
    "RedisConnection": "localhost:6379"
  },
  "Jwt": {
    "Key": "YOUR_SECURE_JWT_KEY_HERE",
    "Issuer": "YourAppName",
    "Audience": "YourAppUsers",
    "ExpiresInMinutes": 36000
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "SerilogConnection",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "YourAppName"
    }
  },
  "AllowedHosts": "*"
}
